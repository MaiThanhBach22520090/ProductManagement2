@{
	ViewData["Title"] = "ProductsByCatalog";
	Layout = "~/Views/Shared/_LayoutOgani.cshtml";
}

@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<Product>

@foreach (var item in Model)
{
	<div class="col-lg-3 col-md-4 col-sm-6 mix oranges fresh-meat">
		<div class="featured__item">
			<div class="featured__item__pic set-bg" data-setbg=@item.Picture>
				<ul class="featured__item__pic__hover">
					<li><a href="#"><i class="fa fa-heart"></i></a></li>
					<li><a href="#"><i class="fa fa-retweet"></i></a></li>
					<li><a href="#"><i class="fa fa-shopping-cart"></i></a></li>
				</ul>
			</div>
			<div class="featured__item__text">
				<h6><a href="#">@item.ProductName</a></h6>
				<h5>@item.UnitPrice</h5>
			</div>
		</div>
	</div>
}

@Html.PagedListPager(Model, page => Url.Action("ProductByCatalog", new { page = page, CatalogID = ViewBag.CatalogID }))