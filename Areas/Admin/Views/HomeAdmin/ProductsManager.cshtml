@model IEnumerable<ProductManagement2.Models.Product>

@{
	ViewData["Title"] = "ProductsManager";
	Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h2>ProductsManager</h2>

<p>
	<a	asp-action="AddProduct">Create New</a>
</p>
<table class="table">
	<thead>
		<tr class="table-warning">
			<th>
				@Html.DisplayNameFor(model => model.ProductCode)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.ProductName)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Picture)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.UnitPrice)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Catalog)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@{
			int i = 0;
			string @cls = "table-primary";

		}
		@foreach (var item in Model)
		{
			if (i % 2 == 0)
			{
				cls = "table-primary";
			}
			else
			{
				cls = "";
			}
			i++;
			<tr class="@cls">
				<td>
					@Html.DisplayFor(modelItem => item.ProductCode)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.ProductName)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Picture)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.UnitPrice)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Catalog.Id)
				</td>
				<td>
					<a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
					<a asp-action="Details" asp-route-id="@item.Id">Details</a> |
					<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>
